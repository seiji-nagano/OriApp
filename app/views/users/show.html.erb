<div class="contents row">
  <p><%= @nickname %>さんの投稿一覧</p>
  <% @tweets.each do |tweet| %>
    <%= render partial: "tweets/tweet", locals: { tweet: tweet } %>
  <% end %>
</div>

<div class ="mystatus">
<canvas id="myChart3"></canvas>
<script src="https://cdn.jsdelivr.net/npm/chart.js@2.8.0"></script>
<script>

var ctx = document.getElementById('myChart3').getContext('2d');
var myLineChart = new Chart(ctx, {
    // The type of chart we want to create
    type: 'bar',
 
    // The data for our dataset
    data: {
        labels: ['シュート', 'ドリブル', 'パス', 'リフティング', 'トラップ', 'ディフェンス', 'セービング', '目標'],
        datasets: [{
            label: 'My Status',
            backgroundColor: 'rgb(255, 99, 132)',
            borderColor: 'rgb(255, 99, 132)',
            data: [0, 0, 0, 0, 0, 0, 0, 20]
        }]
    },
 
    // Configuration options go here
    options: {}
});
 
function updateChart(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[0] = myLineChart.data.datasets[0].data[0]+1;
  myLineChart.update();
}
function updateChar(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[1] = myLineChart.data.datasets[0].data[1]+1;
  myLineChart.update();
}
function updateCha(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[2] = myLineChart.data.datasets[0].data[2]+1;
  myLineChart.update();
}
function updateCh(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[3] = myLineChart.data.datasets[0].data[3]+1;
  myLineChart.update();
}
function updateC(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[4] = myLineChart.data.datasets[0].data[4]+1;
  myLineChart.update();
}
function update(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[5] = myLineChart.data.datasets[0].data[5]+1;
  myLineChart.update();
}
function updat(){
  // 最初のデータセットの値を'March'を'+1'に更新します。
  myLineChart.data.datasets[0].data[6] = myLineChart.data.datasets[0].data[6]+1;
  myLineChart.update();
}

function saveData() {
// ステータスをローカルストレージに保存
  localStorage.setItem('shootCount', myLineChart.data.datasets[0].data[0]);
  localStorage.setItem('dribbleCount', myLineChart.data.datasets[0].data[1]);
  localStorage.setItem('passCount', myLineChart.data.datasets[0].data[2]);
  localStorage.setItem('liftingCount', myLineChart.data.datasets[0].data[3]);
  localStorage.setItem('trapCount', myLineChart.data.datasets[0].data[4]);
  localStorage.setItem('defenseCount', myLineChart.data.datasets[0].data[5]);
  localStorage.setItem('savingCount', myLineChart.data.datasets[0].data[6]);
}

// ページ読み込み時にローカルストレージからデータを読み込む
loadSavedData();

function loadSavedData() {
  myLineChart.data.datasets[0].data[0] = parseInt(localStorage.getItem('shootCount')) || 0;
  myLineChart.data.datasets[0].data[1] = parseInt(localStorage.getItem('dribbleCount')) || 0;
  myLineChart.data.datasets[0].data[2] = parseInt(localStorage.getItem('passCount')) || 0;
  myLineChart.data.datasets[0].data[3] = parseInt(localStorage.getItem('liftingCount')) || 0;
  myLineChart.data.datasets[0].data[4] = parseInt(localStorage.getItem('trapCount')) || 0;
  myLineChart.data.datasets[0].data[5] = parseInt(localStorage.getItem('defenseCount')) || 0;
  myLineChart.data.datasets[0].data[6] = parseInt(localStorage.getItem('savingCount')) || 0;
  myLineChart.update();
}

</script>
</div>
<div class = "update">
  <div class = "update_chart"><button onclick="updateChart()" type="button">シュート</button></div>
  <div class = "update_char"><button onclick="updateChar()" type="button">ドリブル</button></div>
  <div class = "update_char"><button onclick="updateCha()" type="button">パス</button></div>
  <div class = "update_char"><button onclick="updateCh()" type="button">リフティング</button></div>
  <div class = "update_char"><button onclick="updateC()" type="button">トラップ</button></div>
  <div class = "update_char"><button onclick="update()" type="button">ディフェンス</button></div>
  <div class = "update_char"><button onclick="updat()" type="button">セービング</button></div>
</div>
