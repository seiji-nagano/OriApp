<%= form_with(model: @blog, local: true) do |form| %>

  <div class="title">
    <div class="form-tag">タイトル</div>
    <%= form.text_field :title %>
  </div>


  <div class="content">
    <div class="form-tag">内容</div>
    <%= form.text_field :content %>
  </div>

  <div class="time">
    <div class="form-tag">日程</div>
    <%= form.date_field :start_time, id: "date" %>
  </div>


  <div class="submit">
    <%= form.submit %>
  </div>

<% end %>